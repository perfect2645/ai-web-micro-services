{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* 关键配置：添加路径映射 */
    "baseUrl": "./", // 基础路径指向项目根目录（对应tsconfig.app.json所在目录）
    "paths": {
      "@/*": ["src/*"] // 映射@/*到src下所有文件，和Vite配置对齐
    },

    /* 原有配置保持不变 */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"], // 确保覆盖src目录，必不可少
}